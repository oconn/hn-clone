<h1>Home</h1>

<% if !current_user? %>
  <a href="/user/signup" class="button">Sign Up!</a>
<% end %>

<% @posts.each_with_index do |post| %>
  <ul>
    <li>
      <a href="/vote/post/<%= post.id %>"> ^ </a>
      <a href="/post/<%= post.id %>"><%= post.title %></a>
      <% if !post.url.empty? %>
        (<%= post.url %>)
      <% end %>
    </li>
    <li class="time-created">
      (points <%= post.vote_count %>)
      by: <%= post.author %> (<%= time_created(post) %> ago)
      <a class="comment-link" href="/comment/new/<%= post.id %>">Comment</a>
    </li>
  </ul>
  <div></div>
<% end %>

<script type="text/javascript" src="/js/home.js"></script>
